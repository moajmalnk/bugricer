[mysqld]
# ===========================================
# MySQL Configuration for Bug Tracking System
# Database: u262074081_bugfixer_db
# Optimized for PHP 8.1+ and high performance
# ===========================================

# Basic Settings
port = 3306
socket = /tmp/mysql.sock
pid-file = /var/run/mysqld/mysqld.pid
datadir = /var/lib/mysql
tmpdir = /tmp
log-error = /var/log/mysql/error.log
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 1
log_queries_not_using_indexes = 1

# Character Set and Collation
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
init_connect = 'SET NAMES utf8mb4'

# Connection Settings
max_connections = 200
max_connect_errors = 10000
connect_timeout = 10
wait_timeout = 28800
interactive_timeout = 28800
net_read_timeout = 30
net_write_timeout = 60

# Thread Settings
thread_cache_size = 50
thread_handling = pool-of-threads
thread_stack = 256K

# Table and Index Settings
table_open_cache = 4000
table_definition_cache = 2000
open_files_limit = 65535
max_allowed_packet = 64M

# InnoDB Settings (Most Critical for Performance)
default_storage_engine = InnoDB
innodb_buffer_pool_size = 1G
innodb_buffer_pool_instances = 8
innodb_log_file_size = 256M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT
innodb_file_per_table = 1
innodb_open_files = 4000
innodb_io_capacity = 2000
innodb_io_capacity_max = 4000
innodb_read_io_threads = 8
innodb_write_io_threads = 8
innodb_thread_concurrency = 0
innodb_adaptive_hash_index = 1
innodb_change_buffering = all
innodb_autoinc_lock_mode = 2
innodb_strict_mode = 1
innodb_print_all_deadlocks = 1

# Query Cache Settings (if available)
query_cache_type = 1
query_cache_size = 64M
query_cache_limit = 2M
query_cache_min_res_unit = 4K

# MyISAM Settings (if used)
key_buffer_size = 32M
myisam_sort_buffer_size = 8M
myisam_max_sort_file_size = 10G
myisam_repair_threads = 1

# Buffer Settings
sort_buffer_size = 2M
read_buffer_size = 1M
read_rnd_buffer_size = 2M
join_buffer_size = 1M
tmp_table_size = 64M
max_heap_table_size = 64M

# Binary Logging (for replication if needed)
# log-bin = mysql-bin
# binlog_format = ROW
# expire_logs_days = 7
# max_binlog_size = 100M

# Replication Settings (if using replication)
# server-id = 1
# relay-log = mysql-relay-bin
# relay-log-index = mysql-relay-bin.index

# Performance Schema
performance_schema = ON
performance_schema_max_table_instances = 12500
performance_schema_max_table_handles = 4000

# Optimizer Settings
optimizer_switch = 'index_merge=on,index_merge_union=on,index_merge_sort_union=on,index_merge_intersection=on,engine_condition_pushdown=on,index_condition_pushdown=on,mrr=on,mrr_cost_based=on,block_nested_loop=on,batched_key_access=off,materialization=on,semijoin=on,loosescan=on,firstmatch=on,duplicateweedout=on,subquery_materialization_cost_based=on,use_index_extensions=on,condition_fanout_filter=on,derived_merge=on'

# SQL Mode
sql_mode = 'STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION'

# Security Settings
local_infile = 0
skip_symbolic_links = 1

# Logging Settings
general_log = 0
general_log_file = /var/log/mysql/general.log
log_slow_admin_statements = 1
log_slow_slave_statements = 1

# ===========================================
# Client Configuration
# ===========================================

[mysql]
default-character-set = utf8mb4
prompt = '\u@\h [\d]> '

[client]
default-character-set = utf8mb4
port = 3306
socket = /tmp/mysql.sock

# ===========================================
# mysqldump Configuration
# ===========================================

[mysqldump]
quick
quote-names
max_allowed_packet = 64M
default-character-set = utf8mb4

# ===========================================
# myisamchk Configuration
# ===========================================

[myisamchk]
key_buffer_size = 256M
sort_buffer_size = 256M
read_buffer = 2M
write_buffer = 2M

# ===========================================
# mysqlhotcopy Configuration
# ===========================================

[mysqlhotcopy]
interactive-timeout

# ===========================================
# Performance Monitoring Queries
# ===========================================

# Monitor these variables for performance tuning:
# SHOW GLOBAL STATUS LIKE 'Innodb_buffer_pool_read_requests';
# SHOW GLOBAL STATUS LIKE 'Innodb_buffer_pool_reads';
# SHOW GLOBAL STATUS LIKE 'Innodb_buffer_pool_pages_free';
# SHOW GLOBAL STATUS LIKE 'Threads_connected';
# SHOW GLOBAL STATUS LIKE 'Threads_running';
# SHOW GLOBAL STATUS LIKE 'Queries';
# SHOW GLOBAL STATUS LIKE 'Slow_queries';
# SHOW GLOBAL STATUS LIKE 'Created_tmp_disk_tables';
# SHOW GLOBAL STATUS LIKE 'Created_tmp_tables';

